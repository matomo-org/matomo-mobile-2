<Alloy>
    <Window module="xp.ui" id="index" onOpen="onOpen">
        <RightNavButton platform="mobileweb">
            <Button id="updateButton" onClick="doChooseDate"/>
        </RightNavButton>

        <ScrollView class="container">
            <View id="periodContainer" class="section">
                <Label id="periodLabel" class="headline"/>
                <Picker id="periodPicker" onChange="onPeriodChange">
                    <PickerRow id="period_day"/>
                    <PickerRow id="period_week"/>
                    <PickerRow id="period_month"/>
                    <PickerRow id="period_year"/>
                    <PickerRow id="period_range"/>
                </Picker>
            </View>

            <View id="fromDateContainer" class="section">
                <Label id="fromDateLabel" class="headline"/>

                <Picker id="fromDatePicker">
                </Picker>
            </View>

            <View id="toDateContainer" class="section">
                <Label id="toDateLabel" class="headline"/>

                <Picker id="toDatePicker">
                </Picker>
            </View>

            <View id="buttonContainer" platform="android">
                <Button id="updateButton" onClick="doChooseDate"/>
            </View>
        </ScrollView>
    </Window>
</Alloy>