"#index": {
    className: "tableViewSection",
    height: Ti.UI.SIZE,
    backgroundSelectedColor: '#B2AEA5',
    backgroundSelectedImage: '/images/tableviewsection_background_dark.png',
    opacity: 0.95,
},

"#index[platform=android]": {
    backgroundSelectedColor: '#B2AEA5',
    backgroundSelectedImage: '/images/tableviewsection_background_dark.png'
}

"#index[platform=ios]": {
    selectionStyle: Ti.UI.iOS.TableViewCellSelectionStyle.NONE
}

"#title": {
    height: Ti.UI.SIZE,
    width: Ti.UI.SIZE,
    top: 3,
    bottom: 4,
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT,
    color: '#ffffff',
    left: 10,
    font: {fontSize: 15, fontWeight: 'bold'},
    shadowColor: '#212121',
    shadowOffset: {x: 1, y: 1}
},

"#title[platform=ios]": {
    left: 15,
    font: {fontSize: 15, fontWeight: 'normal'},
}

"#title[platform=android]": {
    top: '3dp',
    bottom: '4dp',
    left: '16dp',
    font: {fontSize: '15sp', fontWeight: 'bold'},
},

".headerView": {
    height: Ti.UI.SIZE,
    opacity: 0.95,
    backgroundImage: 'org.piwik.tableviewsection/tableviewsectionbackground.png',
}

".headerView[platform=android]": {
    backgroundImage: '/images/tableviewsection_background_dark.png',
}
